<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripsTrapsTrull.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Trips Traps Trull">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="TurnLabel"
               Text="Kelle kord?"
               FontSize="18"
               HorizontalOptions="Center" />

        <!-- Поле. Ряды/колонки мы создаём в коде -->
        <Grid x:Name="BoardGrid" />

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
            <Button Text="Alusta mängu" Clicked="OnStartClicked" Grid.Row="0" Grid.Column="0"/>
            <Button Text="Kes alustab?" Clicked="OnWhoStartsClicked" Grid.Row="0" Grid.Column="1"/>
            <Button Text="Statistika" Clicked="OnStatsClicked" Grid.Row="1" Grid.Column="0"/>
            <Button Text="Nulli statistika" Clicked="OnClearStatsClicked" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
